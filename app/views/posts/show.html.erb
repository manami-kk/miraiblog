<div class="row">
  <div class="col s6 offset-s2">
    <div class="card">
      <div class="card-image">
        <%= image_tag @post.image %>
        <span class="card-title pink-text lighten-1"><%= @post.title %></span>
      </div>
      <div class="card-content">
        <div class="future-date">
          <p class="blue-text darken-1"><%= @post.future_date %></p>
        </div>
        <div class="nickname">
          <p class="grey-text"><%= @post.user.nickname %></p>
        </div>
        <%= simple_format(@post.text) %>
      </div>
    </div>
  </div>
</div>