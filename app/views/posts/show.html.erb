<div class="row">
  <div class="col s6 offset-s2">
    <div class="card">
      <div class="card-image">
        <%= image_tag @post.image %>
        <span class="card-title"><%= @post.title %></span>
      </div>
      <div class="card-content">
        <%= simple_format(@post.text) %>
      </div>
    </div>
  </div>
</div>